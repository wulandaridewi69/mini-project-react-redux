{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": false,
        "target": "es5",
        "resolveJsonModule": true,
        "esModuleInterop": true ,
        "suppressImplicitAnyIndexErrors": false,
        "typeRoots": [  
            "./src/types", 
            "./node_modules/@types"
        ],
        "lib": [ "es2015", "dom" ],
    },
    "exclude": [
        "**/node_modules", 
        "**/.*/"
    ]
}